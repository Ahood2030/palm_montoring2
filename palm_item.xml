<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#154928">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:orientation="vertical">

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_margin="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintStart_toStartOf="parent"
                tools:background="@color/colorPrimary" />

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/txt_m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Date of Montoring :"
                    android:textColor="@color/colorAccent"
                    app:layout_column="0"
                    android:fontFamily="@font/allura"
                    app:layout_row="0" />

                <TextView
                    android:id="@+id/tx_date"
                    android:layout_width="116dp"
                    android:layout_height="22dp"
                    android:layout_margin="10dp"
                    android:inputType="date"
                    android:textColor="@color/colorAccent"
                    android:text=" TEXT TEST"
                    app:layout_column="1"
                    app:layout_row="0" />

                <TextView
                    android:id="@+id/txt_h"
                    android:fontFamily="@font/allura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:text="Level of humidity :"
                    android:textColor="@color/colorAccent"
                    app:layout_column="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_row="1" />

                <TextView
                    android:id="@+id/rv_hum"
                    android:layout_width="113dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorAccent"
                    android:text=" TEXT TEST"
                    app:layout_column="1"
                    app:layout_row="1" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorAccent"
                    app:layout_column="2"

                    app:layout_row="1"
                    app:srcCompat="@drawable/water" />

                <TextView
                    android:id="@+id/textView_n"
                    android:fontFamily="@font/allura"
                    android:layout_width="119dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="   Level of N :"
                    android:textColor="@color/colorAccent"

                    app:layout_column="0"
                    app:layout_row="2" />

                <TextView
                    android:id="@+id/rv_s"
                    android:layout_width="113dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text=" TEXT TEST"
                    android:textColor="@color/colorAccent"
                    app:layout_column="1"
                    app:layout_row="2" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    app:layout_column="2"
                    app:layout_row="2"
                    app:srcCompat="@drawable/fertilizer" />

                <TextView
                    android:id="@+id/textView_t"
                    android:fontFamily="@font/allura"
                    android:layout_width="113dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Temperture :"
                    android:textColor="@color/colorAccent"

                    app:layout_column="0"
                    app:layout_row="4" />

                <TextView
                    android:id="@+id/rv_tem"
                    android:layout_width="113dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text=" TEXT TEST"
                    android:textColor="@color/colorAccent"
                    app:layout_column="1"
                    app:layout_row="4" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    app:layout_column="2"
                    app:layout_row="4"
                    app:srcCompat="@drawable/heat" />

            </androidx.gridlayout.widget.GridLayout>

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_margin="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintStart_toStartOf="parent"
                tools:background="@color/colorPrimary" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>
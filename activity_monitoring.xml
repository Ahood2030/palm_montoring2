<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#154928">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="2dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton_plant"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="20dp"
                    android:layout_marginStart="51dp"
                    android:layout_marginLeft="51dp"
                    android:layout_marginEnd="76dp"
                    android:layout_marginRight="76dp"
                    android:background="#FFFFFF"
                    android:src="@drawable/plant" />

                <EditText
                    android:id="@+id/date_picker_plant"
                    android:fontFamily="@font/allura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:ems="10"
                    android:textColor="@color/cardview_light_background"
                    android:hint="Enter Date of Plnting"
                    android:inputType="date" />
            </LinearLayout>

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="329dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="30dp"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="54dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                app:alignmentMode="alignMargins">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/fertilizer"
                    app:layout_column="0"
                    app:layout_row="0" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/water"
                    app:layout_column="1"
                    app:layout_row="0" />

                <Spinner
                    android:id="@+id/spinner_net"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    app:layout_column="0"
                    app:layout_row="1" />

                <Spinner
                    android:id="@+id/spinner_h"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    app:layout_column="1"
                    app:layout_row="1" />

                <ImageView
                    android:id="@+id/img_heat"
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/heat"
                    app:layout_column="0"
                    app:layout_row="2" />

                <EditText
                    android:id="@+id/temp"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:hint="enter wether degree"
                    android:fontFamily="@font/allura"
                    android:textSize="18sp"
                    android:textColor="@color/cardview_light_background"
                    app:layout_column="0"
                    app:layout_row="3" />

                <EditText
                    android:id="@+id/proud"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:hint="enter amount of date"
                    android:fontFamily="@font/allura"
                    android:textSize="18sp"
                    android:textColor="@color/cardview_light_background"
                    app:layout_column="1"
                    app:layout_row="3" />

                <ImageView
                    android:id="@+id/imageView_date"
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:src="@drawable/dates"
                    app:layout_column="1"
                    app:layout_row="2" />
            </androidx.gridlayout.widget.GridLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/image_date_m"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="20dp"
                    android:layout_marginStart="51dp"
                    android:layout_marginLeft="51dp"
                    android:layout_marginEnd="76dp"
                    android:layout_marginRight="76dp"
                    android:background="#FFFFFF"
                    android:src="@drawable/plant" />

                <EditText
                    android:id="@+id/date_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:ems="10"
                    android:textColor="@color/cardview_light_background"
                    android:inputType="date" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_save"
                    android:fontFamily="@font/allura"
                    android:layout_width="137dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="100dp"
                    android:background="#407542"
                    android:text="Save"
                    android:textColor="@color/cardview_light_background"
                    tools:layout_marginLeft="80dp"
                    tools:layout_marginRight="80dp" />

                <Button
                    android:id="@+id/button_add_palm"
                    android:fontFamily="@font/allura"
                    android:layout_width="137dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="100dp"
                    android:background="#407542"
                    android:text="Add Palm"
                    android:textColor="@color/cardview_light_background"
                    tools:layout_marginLeft="80dp"
                    tools:layout_marginRight="80dp" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>